@model PersonalInfo

@{
ViewData["ValidatorName"] = "Complex Model Validation";
}

<form method="post" class="d-flex flex-column gap-4">
    
    <div class="form-floating flex-fill">
        <input class="form-control" asp-for="Preferences.FavoriteColor" placeholder="" />
        <label>Preferences.FavoriteColor (type blue to force FavoriteBlueShade validation)</label>
        <span class="text-danger" asp-validation-for="Preferences.FavoriteColor"></span>
    </div>
    <div class="form-floating flex-fill">
        <input class="form-control" asp-for="Preferences.FavoriteBlueShade" placeholder="" />
        <label>Preferences.FavoriteBlueShade</label>
        <span class="text-danger" asp-validation-for="Preferences.FavoriteBlueShade"></span>
    </div>
    <hr/>

    <button type="submit" class="btn btn-primary btn-lg col-4 m-auto mt-4">
        Submit for Validation
    </button>
</form>