@model EqualTo.Model

<form method="post" class="d-flex flex-column gap-2" novalidate 
    asp-action="@nameof(HomeController.Save)" 
    asp-controller="Home"
    asp-route-modelTypeName="@(typeof(EqualTo.Model).FullName)">
    <h3>
        Not Null
    </h3>

    <div data-testid="eq2-valid-alert" class="alert alert-success alert-dismissible valid-alert" style='display: none;'>
        <button type="button" class="btn-close" onclick="$(this).parent().fadeOut();"></button>
        <span class="alert-message">
        </span>
    </div>

    <div class="form-floating flex-fill">
        <input class="form-control" asp-for="Value1" placeholder="" data-testid="eq2-value1" />
        <label asp-for="Value1">
            First value
        </label>
        <span class="text-danger" asp-validation-for="Value1" data-testid="eq2-val1-valid-msg"></span>
    </div>
    <div class="form-floating flex-fill">
        <input class="form-control" asp-for="Value2" placeholder="" data-testid="eq2-value2" />
        <label asp-for="Value2">
            Second value
        </label>
        <span class="text-danger" asp-validation-for="Value2" data-testid="eq2-val2-valid-msg"></span>
    </div>
    <div class="d-flex flex-row gap-4 align-items-center justify-content-center">
        <button data-testid="eq2-btn-reset" type="button" class="btn btn-outline-secondary btn-lg btn-reset">
            Reset
        </button>
        <button data-testid="eq2-btn-client" type="button" class="btn btn-outline-info btn-lg btn-validate">
            Validate on Client
        </button>
        <button data-testid="eq2-btn-server" type="button" class="btn btn-outline-primary btn-lg btn-validate"
            data-server-validate="true">
            Submit for Validation
        </button>
    </div>
</form>