<script type="text/javascript">
    jQuery.extend($.validator.defaults, {
        validClass: "is-valid",
        errorClass: "is-invalid"
    });

    $.validator.unobtrusive.options = jQuery.extend($.validator.unobtrusive.options, {
        validClass: "is-valid",
        errorClass: "is-invalid"
    });

    function isFormValid(form) {
        return $(form).valid();
    }
</script>